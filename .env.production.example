# Production Environment Variables Template
# Copy to .env.production and fill in real values

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database (Use managed PostgreSQL service)
DATABASE_URL=postgresql://username:password@host:5432/throttlemeet_production

# Redis (Use managed Redis service)
REDIS_URL=redis://username:password@host:6379

# JWT Configuration (Use strong, unique secrets)
JWT_SECRET=your_super_secure_production_jwt_secret_256_bits_minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Apple Sign In (Production credentials)
APPLE_TEAM_ID=YOUR_APPLE_TEAM_ID
APPLE_CLIENT_ID=com.throttlemeet.app
APPLE_KEY_ID=YOUR_APPLE_KEY_ID
APPLE_PRIVATE_KEY_PATH=/app/keys/AuthKey_PRODUCTION.p8

# Facebook (Production app credentials)
FACEBOOK_APP_ID=your_production_facebook_app_id
FACEBOOK_APP_SECRET=your_production_facebook_app_secret

# Cloudinary (Production account)
CLOUDINARY_CLOUD_NAME=your_production_cloud_name
CLOUDINARY_API_KEY=your_production_api_key
CLOUDINARY_API_SECRET=your_production_api_secret

# External APIs (Production keys)
WEATHER_API_KEY=your_production_openweather_api_key
EVENTBRITE_API_TOKEN=your_production_eventbrite_token
MEETUP_API_KEY=your_production_meetup_api_key

# Email Service (Production SMTP)
SMTP_HOST=your_production_smtp_host
SMTP_PORT=587
SMTP_USER=your_production_email
SMTP_PASS=your_production_app_password

# Push Notifications (Production certificates)
APNS_KEY_PATH=/app/keys/apns_production.p8
APNS_KEY_ID=your_production_apns_key_id
APNS_TEAM_ID=your_apple_team_id
APNS_BUNDLE_ID=com.throttlemeet.app

# Security Settings (Production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# CORS (Production domains only)
CORS_ORIGIN=https://throttlemeet.com,https://admin.throttlemeet.com

# Logging
LOG_LEVEL=info